.contact-form
  = form_for(@user) do |f|
    - if @user.errors.any?
      #error_explanation
        %h2
          = pluralize(@user.errors.count, "error")
          prohibited this user from being saved:
        %ul
          - @user.errors.full_messages.each do |message|
            %li= message
    .field
      = f.text_field :nombres, placeholder: 'Nombres', required: true, pattern: '[a-zA-Z ]*$', title: 'Introduzca su(s) nombre(s) correctamente'
    .field
      = f.text_field :correo, placeholder: 'Correo electr√≥nico', required: true
    .field
      = f.text_area :mensaje, placeholder: 'Escriba su mensaje', required: true
    %div
      %button.btn ENVIAR
