<div id="filterrific_results">

  <table>
    <tr>
      <th>Nombres</th>
      <th>Apellidos</th>
    </tr>
    <% people.each do |person| %>
      <tr>
        <td><%= person.nombres %></td>
        <td><%= person.apellidos %></td>
        <td><%= link_to 'Mostrar', person %></td>
      </tr>
    <% end %>
  </table>
</div>
