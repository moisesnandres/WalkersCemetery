%p#notice= notice
%section.max-container
  %h2 Datos del beneficiario
  .data
    %h3= "Nombres completos: #{@person.nombres_completos}"
    %h3= "Fecha de nacimiento: #{@person.fecha_nac}"
    %h3= "Fecha de defunción: #{@person.fecha_fallecimiento}"
    %h3= "Sector: #{@person.sector.nombre}"
  %figure.sector= image_tag "sector-#{@person.sector.id}.png"
  - if admin_signed_in?
    .walker-form
      .btn-group
        = link_to 'Editar', edit_person_path(@person), class: 'btn-block btn'
        = link_to 'Atrás', people_path, class: 'btn-block btn btn-cancel'
